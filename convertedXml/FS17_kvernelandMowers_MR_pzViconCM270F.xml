    </turnedOnRotationNodes>

    <mowerBlades>
        <blade index="0>2|1|0" startRotation="0 3 0" centerRotation="0 87 0" endRotation="0 170 0"/>
        <blade index="0>2|1|1" startRotation="0 130 0" centerRotation="0 207 0" endRotation="0 290 0"/>
